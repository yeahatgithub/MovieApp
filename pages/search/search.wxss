/* pages/search/search.wxss */
@import "../index/index.wxss";

.search-part {
    display: flex;
    flex-direction: row;
    padding-top: 20px;
    padding-left: 20px;
    font-size: 16px;
}
.search-key {
    width: 60%;
    background-color: white;
    color: black;
    box-shadow: black 0 1px 0;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 5px;
}

.search-btn {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 10px;
    border-left: 0px;
    background-color: orange;
    color: white;
}

.btn-click {
    background-color: orangered;
}